{
    "name": "libsodium",
    "version": "1.10020.6",
    "description": "ESPHome's libsodium port",
    "keywords": "libsodium",
    "repository": {
        "type": "git",
        "url": "https://github.com/esphome/libsodium-esphome.git"
    },
    "export": {
        "include": [
            "port/*",
            "port_include/*",
            "library.json",
            "README.md",
            "LICENSE",
            "libsodium/src/libsodium/*",
            "libsodium/LICENSE"
        ]
    },
    "license": "MIT",
    "build": {
        "includeDir": "libsodium/src/libsodium/include",
        "srcDir": "libsodium/src/libsodium",
        "flags": [
            "-I libsodium/src/libsodium/include/sodium",
            "-I port_include",
            "-D CONFIGURED=1",
            "-Wno-unused-function",
            "-Wno-unknown-pragmas",
            "-Wno-unused-variable",
            "-Wno-type-limits"
        ],
        "srcFilter": [
            "-<*>",
            "+<crypto_stream/salsa20>",
            "+<crypto_core/salsa>",
            "+<randombytes>",
            "+<crypto_aead/chacha20poly1305/sodium/aead_chacha20poly1305.c>",
            "+<crypto_hash/crypto_hash.c>",
            "+<crypto_hash/sha256/cp/hash_sha256_cp.c>",
            "+<crypto_hash/sha256/hash_sha256.c>",
            "+<crypto_onetimeauth/crypto_onetimeauth.c>",
            "+<crypto_onetimeauth/poly1305/donna/poly1305_donna.c>",
            "+<crypto_onetimeauth/poly1305/onetimeauth_poly1305.c>",
            "+<crypto_scalarmult/crypto_scalarmult.c>",
            "+<crypto_scalarmult/curve25519/ref10/x25519_ref10.c>",
            "+<crypto_core/ed25519/ref10/ed25519_ref10.c>",
            "+<crypto_scalarmult/curve25519/scalarmult_curve25519.c>",
            "+<crypto_stream/chacha20/ref/chacha20_ref.c>",
            "+<crypto_stream/chacha20/stream_chacha20.c>",
            "+<crypto_stream/crypto_stream.c>",
            "+<crypto_verify/verify.c>",
            "+<sodium/codecs.c>",
            "+<sodium/core.c>",
            "+<sodium/runtime.c>",
            "+<sodium/utils.c>",
            "+<../../port/version.c>"
        ]
    }
}
